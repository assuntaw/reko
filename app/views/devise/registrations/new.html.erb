

<div class="welcome-message" style="text-align: center">
  <h1>Team Reko Says Hi</h1>
</div>

<div class="paper-wrapper">
    <form>
      <div class="signin-wrapper">
        <h1>Sign up for Reko</h1>
        <input type="text" name="email" placeholder="EMAIL" class="input-field-text-md">
        <input type="text" name="first-name" placeholder="FIRST NAME" class="input-field-text-md">
        <input type="text" name="last-name" placeholder="LAST NAME" class="input-field-text-md">
        <input type="password" name="password" placeholder="PASSWORD" class="input-field-text-md">
        <br>
        <input type="submit" name="create-account">
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </form>
</div>















