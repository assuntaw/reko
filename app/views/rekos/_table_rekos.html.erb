<!--
  THIS PARTIAL NEEDS TWO PARAMETERS
  "rekos", WHICH IS AN ARRAY OF REKO INSTANCES
  "hide_asker", WHICH IS A BOOLEAN TO NOT SHOW THE ASKER
-->
<table class="table table-sm">
  <tr>
    <th></th>
    <th>id</th>
    <% unless hide_asker %>
      <th>asker_id</th>
      <th>asker_name</th>
    <% end %>
    <th>teller_name</th>
    <th>content_type</th>
    <th>content_id</th>
    <th>content_title</th>
    <th>status</th>
    <th>created_at</th>
    <th>updated_at</th>
  </tr>
  <% rekos.each do |reko| %>
    <tr>
      <td><img src="<%= reko.content.image_url %>" alt=""></td>
      <%#= image_tag reko.content.url(:large), :style => "border: 1px solid red" %>
      <td><%= reko.id %></td>
      <% unless hide_asker %>
        <td><%= link_to reko.asker.id, user_path(reko.asker) %></td>
        <td><%= reko.asker.first_name %></td>
      <% end %>
      <td><%= reko.teller_name %></td>
      <td><%= reko.content_type %></td>
      <td><%= reko.content_id %></td>
      <td><%= reko.content.to_s %></td>
      <td><%= reko.status %></td>
      <td><%= reko.created_at %></td>
      <td><%= reko.updated_at %></td>
    </tr>
  <% end %>
</table>
