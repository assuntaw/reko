
<div class="inbox-title">
  <h2> <i class="fas fa-user"></i><%= current_user.first_name %></h2>
</div>

<%#= link_to "Add new reko", new_reko_path(token: current_user.token)  %>

<div>
  <h2>YOUR LINK:</h2>
  <div>
    <button class="js-copy btn btn-primary">DISPLAY LINK HERE</button>
  </div>
</div>

<div>
  ADD REKOS:
  <%= link_to "+", new_reko_path  %>
</div>

<%if @movies.size > 0 %>
  <div class="movie-list">
    <h2>MOVIES</h2>
    <% @movies.each do |reko| %>
      <div>
        <p><%= reko[:reko].recommendable.title %></p>
        <span><i class="fas fa-user"></i></span>
        <% reko[:sender_names].each do |name| %>
          <span><%= name %> </span>
        <% end %>
      </div>
      <div>
        <img src="<%= reko[:reko].recommendable.image_url %>" alt="" height="120">
      </div>
    <% end %>
  </div>
<% else %>
  <div class="empty-reko-list">
    Your list is currently empty :(
  </div>
<%end %>



