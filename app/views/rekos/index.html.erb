<div class="container">
  <h1>All Rekos</h1>
  <table class="table table-sm">
    <tr>
      <th>id</th>
      <th>asker_id</th>
      <th>asker_name</th>
      <th>teller_name</th>
      <th>content_type</th>
      <th>content_id</th>
      <th>content_title</th>
      <th>created_at</th>
      <th>updated_at</th>
    </tr>
    <% @rekos.each do |reko| %>
      <tr>
        <td><%= reko.id %></td>
        <td><%= reko.asker.id %></td>
        <td><%= reko.asker.first_name %></td>
        <td><%= reko.teller_name %></td>
        <td><%= reko.content_type %></td>
        <td><%= reko.content_id %></td>
        <td><%= reko.content.to_s %></td>
        <td><%= reko.created_at %></td>
        <td><%= reko.updated_at %></td>
      </tr>
    <% end %>
  </table>
</div>
