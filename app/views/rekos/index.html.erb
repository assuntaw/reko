
<div class="background-container b-gray">
   <div class="master-container">

    <div class="inbox-title">
      <p> <i class="fas fa-user"></i><%= current_user.first_name %></p>
    </div>

    <div class="paper-wrapper">
      <%#= link_to "Add new reko", new_reko_path(token: current_user.token)  %>

      <div class="inbox-top-nav">
        <div class="copy-link-nav">
          <p>SEND LINK TO FRIENDS:</p>
          <a class="js-copy bttn reko-link b-violet"><%= @visitor_link %></a>
        </div>
          <%= link_to "+", new_reko_path, class:"bttn-round" %>
      </div>



<!-- !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->
<!-- DONT TOUCH BELOW OR ASSUNTA WILL KILL ME -->
<!-- !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->

      <%if @movies.size > 0 %>
        <div id="movie-list">

          <% @movies.each do |reko| %>

              <div class="swiper-card" data-reko-id="<%= reko[:reko].id %>">
               <div class="swiper-container">
                <div class="swiper-wrapper">

                <!-- MARK WATCHED -->
                  <div class="swiper-slide mark-watched-slide">
                    <%= link_to "", reko_mark_as_done_path(reko[:reko]), method: :put, remote: true, class: "fas fa-check", style: "color: white; height: 90px; width: 90px; display: flex; align-items: center; justify-content: center"  %>
                  </div>

                <!-- MAIN SLIDE  -->
                  <div class="swiper-slide main-slide <%= 'light-grey-background' if reko[:reko].done? %>">
                    <div class="reko-info">
                      <div class="reko-title"><%= reko[:reko].recommendable.title %></div>

                      <div class="sender-names">
                        <i style="font-size: 29px" class="fas fa-user-circle"></i>

                        <div>
                          <%= reko[:sender_names].first.capitalize %>
                          <% if reko[:sender_names].size > 1 %>
                            <br>+
                          <%= pluralize((reko[:sender_names].size - 1), 'other') %>
                          <% end %>
                        </div>
                      </div>
                    </div>

                    <div class="reko-artwork" style="background-image: url(<%= reko[:reko].recommendable.image_url %>);">
                      <!-- <img src="<%= reko[:reko].recommendable.image_url %>" alt="" height="120"> -->
                    </div>
                  </div>

                <!-- DELETE REKO -->
                  <div class="swiper-slide delete-slide" >
                    <%= link_to "", reko_mark_as_rejected_path(reko[:reko]), method: :put, remote: true, class: "fas fa-trash-alt", style: "color: white; height: 90px; width: 90px; display: flex; align-items: center; justify-content: center"  %>
                  </div>

                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-reko-list">
          Your list is currently empty :(
        </div>
      <%end %>
    </div>



  </div>
</div>
