
<div class="background-container-landing white">
  <div class="master-container-landing">
    <div class="landing-wrapper-landing">

      <div class="logo-landing">
      </div>

      <h2 class="t-large">
        Home for all your <br>recommendations.
      </h2>
      <!-- IF USER HAS INVITATION LINK -->
      <% if @invited %>
        <div class="congrats">
          Congrats!!
        </div>
        <div class="congrats-bttn">
          <%= link_to "BETA ACCESS", new_user_registration_path, :class => "bttn b-large b-wide b-violet", :method => :get %>
        </div>
      <!-- IF USER HAS NO (or wrong) INVITATION LINK -->
      <% else %>
        <div class="congrats">
          Our Alpha Test is currently full, but we would love to have you onboard for the Beta launch!
        </div>
        <div class="congrats-bttn">
          <%= link_to "APPLY FOR BETA", new_beta_applicant_path, :class => "bttn b-large b-wide b-violet", :method => :get %>
        </div>
      <% end %>
    </div>

    <div class="paper-wrapper-landing">
      <div class="landing-bottom-btns">
        <%= link_to "MEMBER LOG IN", new_user_session_path, class: "bttn b-small b-dark-violet" %>
      </div>
    </div>
  </div>
</div>

